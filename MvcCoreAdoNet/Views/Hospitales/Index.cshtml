@model List<Hospital>

<div class="container">
	<h1>Lista de Hospitales</h1>
	<table class="table table-hover table-bordered">
		<thead>
			<tr>
				<th>Nombre</th>
				<th>Direccion</th>
				<th>Telefono</th>
				<th>Detalles</th>
				<th>Actualizar</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach(Hospital hospital in Model){
				<tr>
					<td>@hospital.Nombre</td>
					<td>@hospital.Direccion</td>
					<td>@hospital.Telefono</td>
					<td>
						<button class="btn btn-outline-danger">
							@Html.ActionLink("Detalle","Details","Hospitales"
							, new {id = hospital.IdHospital})
						</button>
					</td>
					<td>
						<button class="btn btn-outline-dark">
						@Html.ActionLink("Actualizar","Update","Hospitales",
						new{id=hospital.IdHospital})
						</button>
					</td>
					<td>
						@Html.ActionLink("Eliminar","Delete","Hospitales",
						new{id=@hospital.IdHospital})
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
